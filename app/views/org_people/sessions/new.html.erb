<% provide(:title, "Sign in") %>

<div class="col-md-6 col-md-push-3">
  <center><h1>Sign in</h1></center>
  <%= form_for(resource, as: resource_name, url: org_person_session_path) do |f| %>
    <div id="error_explanation" class="col-md-12">
        <%= devise_error_messages! %>
    </div>
    <div class="col-md-12">
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "sophia@example.com", :class => "form-control" %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", :class => "form-control"  %>
      </div>
      
      <% if devise_mapping.rememberable? %>
        <div class="signin_remember_me">
          <%= f.check_box :remember_me %> Remember me
        </div>
      <% end %>

      <div class="actions shared_links">
        <%= f.submit "Log in", class: "btn btn-large btn-primary" %>
      </div>

      <div>
        <%= render "org_people/shared/links" %>
      </div>
    </div>
  <% end %>
</div>